{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "useDefineForClassFields": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "ES6",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "types": ["react", "react-dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
